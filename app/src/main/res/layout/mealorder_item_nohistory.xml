<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="10dp"
    android:layout_marginTop="10dp"
    android:layout_marginRight="10dp"
    android:background="@drawable/common_background"
    android:paddingBottom="5dp">

    <ImageView
        android:id="@+id/history_smily"
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_centerInParent="true"
        android:layout_marginBottom="30dp"
        android:src="@drawable/ic_nohistory" />

    <TextView
        android:id="@+id/order_res_name"
        style="@style/subheading_text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/history_smily"
        android:layout_marginTop="10dp"
        android:text="No Orders Exist"
        android:textAlignment="center"
        android:textColor="@color/orange_app"
        android:textStyle="normal" />
</RelativeLayout>